{{> navbar isLogNav}}
<main id= "service-profile">
<h1>Edit your service</h1>

<form action='/services/edit/{{service._id}}' method='POST'>
<img src={{service.picture.[0]}} alt="Service Picture">
<br>
  <label for=''>Service name</label>
  <input type='text' name='name' minlength="3" value="{{service.name}}">
<br>
  <label for=''>Service description</label>
  <input type='text' name='description' minlength="3" value="{{service.description}}">
<br>
  <label for=''>Service location</label>
  <input type='text' name='location' minlength="3" value="{{location.name}}">
<br>
  <label for=''>Service duration in hours</label>
  <input type='number' name='duration' value="{{service.duration}}" placeholder="1">
<br>
  <label for=''>Select the service category:</label>
<select name="category" value="{{service.category}}">
    <option value="Care">Care</option>
    <option value="Construction & repair">Construction & repair</option>
    <option value="Digital services">Digital services</option>
    <option value="Food">Food</option>
    <option value="Sports & Health">Sports & Health</option>
    <option value="Other">Other</option>
</select>
<br>

  <button type='submit'>Edit service</button>

  </form>

</main>